<section class="container body">
    <% @posts.each do |post| %>
    <div class="columns features">
        <div class="column">
            <div class="card is-shady">
                <div class="card-image has-text-centered">
                    ？
                </div>
                <div class="card-content">
                    <div class="field"><%= post.content %></div>
                    <hr/>
                    <div class="field"><div class="control"><label class="checkbox"><input type="checkbox"><%= post.answer1 %></label></div></div>
                    <div class="field"><div class="control"><label class="checkbox"><input type="checkbox"><%= post.answer2 %></label></div></div>
                    <div class="field"><div class="control"><label class="checkbox"><input type="checkbox"><%= post.answer3 %></label></div></div>
                    <div class="field"><div class="control"><label class="checkbox"><input type="checkbox"><%= post.answer4 %></label></div></div>
                    <div class="field"><div class="control"><button class="button is-link">回答</button></div></div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</section>
