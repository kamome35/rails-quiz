<section class="container body">
    <div class="columns features">
        <div class="column">
            <div class="card is-shady">
                <div class="card-image has-text-centered">
                    投稿内容
                </div>
                <div class="card-content">
                    <%= form_tag("/create") do %>
                    <div class="field"><div class="control"><input class="input" type="text" name="content" placeholder="問題文"></div></div>
                    <hr/>
                    <div class="field"><div class="control"><input class="input" type="text" name="answer1" placeholder="回答1"></div></div>
                    <div class="field"><div class="control"><input class="input" type="text" name="answer2" placeholder="回答2"></div></div>
                    <div class="field"><div class="control"><input class="input" type="text" name="answer3" placeholder="回答3"></div></div>
                    <div class="field"><div class="control"><input class="input" type="text" name="answer4" placeholder="回答4"></div></div>
                    <div class="field"><div class="control"><input type="submit" value="投稿" class="button is-link"></div></div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
